<?xml version="1.0" encoding="utf-8"?>
<!--activity_main.xml-->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <!-- static text \\ "серий введено" -->
    <TextView
        android:id="@+id/static_text"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"

        android:layout_marginTop="1dp"


        android:gravity="center_vertical"
        android:text="Серий введено:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_next_error" />




    <!-- dynamic test \\ series counter -->
    <TextView
        android:id="@+id/series_cnt"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginStart="8dp"
        android:text="0"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/static_text" />





    <!-- script starter \\ button -->
    <Button
        android:id="@+id/button_extend"

        android:layout_width="180dp"
        android:layout_height="70dp"

        android:layout_marginTop="32dp"

        android:layout_marginEnd="8dp"
        android:backgroundTint="#FFD13B"
        android:text="Протянуть серии"
        android:textColor="@android:color/black"
        android:textColorLink="#FFEB3B"
        android:textSize="18sp"


        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <!-- Main text field -->
    <EditText
        android:id="@+id/main_field"

        android:textIsSelectable="true"
        android:scrollbars="vertical"
        android:gravity="top|start"

        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:background="@android:drawable/edit_text"


        android:hint="Введите текст здесь..."
        android:inputType="textMultiLine|textCapSentences"
        android:maxLines="100"

        android:paddingStart="16dp"

        android:paddingTop="12dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"

        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_extend" />



    <ImageButton
        android:id="@+id/button_copy"
        android:layout_width="48dp"
        android:layout_height="62dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="?attr/actionModeCopyDrawable" />

    <ImageButton
        android:id="@+id/button_delete"
        android:layout_width="45dp"
        android:layout_height="60dp"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/button_next_error"
        android:layout_width="59dp"
        android:layout_height="62dp"
        android:layout_marginStart="10dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/button_delete"
        app:layout_constraintStart_toEndOf="@+id/button_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_media_next" />


</androidx.constraintlayout.widget.ConstraintLayout>
